---

<BaseLayout title="Projects – La Aura Interiors">
  <BaseLayout title="projects – La Aura Interiors">
  <Header />
  <SideNav />

  <section class="hero">
    <div class="hero-content" id="hero">
      <img src={import.meta.env.BASE_URL + 'img/logo.jpg'} alt="La Aura Interiors Logo" class="hero-logo"/>
      <h1>Projects</h1>
      <p>Unique spaces crafted with vision, detail, and harmony.</p>
    </div>
  </section>

    <!-- Project kártyák -->
    <section class="projects section-inner" id="projects">

      <div class="projects-grid">
        {projects.map((p, i) => (
          <article
            class="project-card"
            tabindex="0"
            data-title={p.title}
            data-teaser={p.teaser}
            data-long={p.long}
            data-images={JSON.stringify(p.images)}
          >
            <div class="project-thumb">
              <img src={p.cover} alt={p.title} loading="lazy" />
            </div>
            <div class="project-info">
              <h3>{p.title}</h3>
              <p class="project-teaser">{p.teaser}</p>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Modal / Lightbox a projektekhez (egyszer, dinamikusan töltjük) -->
    <div id="project-modal" class="project-modal" aria-hidden="true" role="dialog" hidden>
      <div class="pm-backdrop" data-close="1"></div>
      <div class="pm-dialog" role="document" aria-labelledby="pm-title">
        <button class="pm-close" aria-label="Close" data-close="1">×</button>

        <div class="pm-body">
          <div class="pm-gallery">
            <button class="pm-nav pm-prev" aria-label="Previous image">‹</button>
            <div class="pm-stage">
              <!-- ide kerül az aktuális kép -->
              <img id="pm-image" alt="" />
            </div>
            <button class="pm-nav pm-next" aria-label="Next image">›</button>
          </div>
          <div class="pm-header">
            <h3 id="pm-title"></h3>
          </div>
          <p id="pm-desc" class="pm-desc"></p>
          <div class="pm-dots" aria-label="Gallery pagination"></div>
        </div>

      </div>
    </div>

    <!-- Oldal-specifikus script CSAK itt -->
